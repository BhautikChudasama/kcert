@inject CertClient _cert
@model (List<V1Secret>, V1Ingress)
@{ 
    ViewData["Title"] = "Ingress";
    var (secrets, ingress) = Model;
    var configuredHosts = ingress.Spec.Rules.Select(r => r.Host).ToHashSet();
}

<h2>Managed TLS Secrets</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Namespace</th>
                <th scope="col">Secret</th>
                <th scope="col">Hosts</th>
                <th scope="col">Created</th>
                <th scope="col">Expiration</th>
                <th scope="col">Challenge Route</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in secrets)
            {
                var cert = _cert.GetCert(row);
                var hosts = _cert.GetHosts(cert);
                var isConfigured = hosts.All(h => configuredHosts.Contains(h));
            <tr>
                <td>@row.Namespace()</td>
                <td>@row.Name()</td>
                <td>@Html.Raw(string.Join("<br>", hosts.Select(h => $"<a target='_blank' href='https://{h}'>{h}</a>")))</td>
                <td>@cert?.NotBefore.ToString("s")</td>
                <td>@cert?.NotAfter.ToString("s")</td>
                <td><a class="btn btn-@(isConfigured ? "success" : "danger")">@(isConfigured ? "configured" : "unconfigured")</a></td>
                <td><a class="btn btn-primary" asp-action="Renew" asp-route-ns="@row.Namespace()" asp-route-secretName="@row.Name()">Renew</a></td>
            </tr>           
            }
        </tbody>
    </table>
</div>
